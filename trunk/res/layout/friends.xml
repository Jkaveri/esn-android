<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp"
    android:background="#B8AFA5" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/esn_setting_profile_avataruser"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_profile_avatar"
            android:maxWidth="70dp"
            android:padding="2dp"
            android:maxHeight="70dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/esn_global_loading"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/ic_profile_header"
            >
            <TextView
                android:id="@+id/esn_setting_profile_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textbrown"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/esn_setting_profile_gender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/textbrown"
                />
            
            <TextView
                android:id="@+id/esn_setting_profile_address"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:textColor="@color/textbrown"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/esn.setting.isfriend"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_profile_button"
            android:onClick="FriendActionClicked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/esn_setting_profile_setting"
            android:textColor="#B8AFA5"
            android:textSize="13dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_profile_button"
            android:onClick="DevelopClicked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/esn_setting_profile_notification"
            android:textColor="#B8AFA5"
            android:textSize="13dp" />

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_profile_button"
            android:contentDescription="@string/app_global_camera"
            android:src="@drawable/ic_report_event"
            android:layout_weight="1"
            android:textSize="15dp"
            android:onClick="DevelopClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:onClick="FriendsClicked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_profile_friends"
            android:contentDescription="@string/app_global_camera"
            android:textSize="15dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:onClick="DevelopClicked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_profile_info"
            android:contentDescription="@string/app_global_camera"
            android:textSize="15dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_global_camera"
            android:src="@drawable/ic_profile_location"
            android:textSize="15dp"
            android:onClick="DevelopClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >
        <ListView
            android:id="@+id/esn_setting_profile_listeventuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</LinearLayout>