<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="50dip"
    android:layout_marginTop="50dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img.esn.userpage.avatar"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_no_avata" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt.esn.userpage.fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_esn_userpage_fullname"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt.esn.userpage.status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_esn_userpage_status"
                    android:textSize="14dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="10dp"
                android:background="#ACCC" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/txt_esn_userpage_adress"
                    android:textColor="#33b5e5"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txt.esn.userpage.adress"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#33b5e5"
                    android:textSize="16dp"
                    
                    />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#ACCC" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/txt_esn_userpage_country"
                    android:textColor="#33b5e5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt.esn.userpage.country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#33b5e5"
                    android:textSize="16dp" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#ACCC" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="@string/txt_esn_userpage_birthday"
                    android:textColor="#33b5e5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt.esn.userpage.birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#33b5e5"
                    android:textSize="16dp" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#ACCC" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/txt_esn_userpage_gender"
                    android:textColor="#33b5e5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt.esn.userpage.gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#33b5e5"
                    android:textSize="16dp" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#ACCC" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/txt_esn_userpage_phone"
                    android:textColor="#33b5e5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt.esn.userpage.phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#33b5e5"
                    android:textSize="16dp" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#ACCC" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/txt_esn_userpage_favorite"
                    android:textColor="#33b5e5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt.esn.userpage.favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#33b5e5"
                    android:textSize="16dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>