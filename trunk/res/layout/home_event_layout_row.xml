<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ic_event_bg"
    android:padding="6dp"
    >     
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        > 
        <ImageView 
			android:layout_width="40dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
			android:background="@drawable/ic_event_type_0_1"          
            />     
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
		   		android:id="@+id/esn.home.event.title"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="15dp"
		        android:textColor="#9A9B91"
		        android:layout_margin="4dp"
		        android:text="@string/esn_addNewEvent_title"
		        android:layout_marginRight="10dp"/> 
		    <TextView
		    	android:id="@+id/esn.home.event.description"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="13dp"
		        android:textColor="#9A9B91"
		        android:text="@string/esn_addNewEvent_description"
		        android:layout_marginLeft="4dp"/>        
        </LinearLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center_horizontal"
	    >
	    <ImageView
	        android:id="@+id/esn.home.event.listEventImage"
	        android:layout_width="250dp"
	        android:layout_height="180dp"
	        android:maxWidth="250dp"
	        android:minWidth="150dp"
	        android:layout_marginTop="4dp"
	        android:layout_marginBottom="4dp"
	        android:contentDescription="@string/app_name"
	        android:background="@drawable/ic_default_event_picture"
	        android:scaleType="fitXY"/>
	</LinearLayout>
	<LinearLayout 
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="2dp"
	    android:gravity="right">    	
	   	<TextView
	    	android:id="@+id/esn.home.event.date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="13dp"
	        android:layout_weight="1"
	        android:textColor="@android:color/white"
	        android:text="01-01-2012"
	        android:padding="4dp"/>
	   	<ImageView 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:scaleType="fitXY"
	   	    android:src="@drawable/ic_true"
	   	    />
	   	<TextView
	    	android:id="@+id/esn.home.event.likecount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="20dp"
	        android:layout_marginLeft="5dp"
	        android:textSize="13dp"
	        android:text="0"
	        android:padding="4dp"
	        android:textColor="#9A9B91"/>
	   	<ImageView
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:scaleType="fitXY"
	   	    android:src="@drawable/comment"
	   	    />
	   	<TextView
	    	android:id="@+id/esn.home.event.commentcount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="13dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginLeft="5dp"
	        android:text="0"
	        android:textColor="#9A9B91"
	        android:padding="4dp"/>  	    
	</LinearLayout>   	
</LinearLayout>