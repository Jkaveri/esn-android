<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:background="#CC0033">
        
        	<LinearLayout 
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:gravity="center"
        	    android:layout_marginTop="15dp"
        	    android:layout_marginBottom="15dp"
        	    >
        	    <ImageView
		            android:id="@+id/ivLogo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/applogo"/>        	    
        	</LinearLayout>        	
        	
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="3dp"
	   	    	android:layout_marginRight="3dp"/>            
            
        	<EditText
	        	android:id="@+id/esn.register.txtEmail"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="5dp"
	            android:hint="@string/tvEmail"
	            android:background="@drawable/rounded_corner_white"
	            android:paddingLeft="5dp"
	            android:height="40dp"
	            android:paddingTop="7dp"
	            android:paddingBottom="7dp"
	            android:paddingRight="5dp"
	            android:layout_marginLeft="3dp"
	   	    	android:layout_marginRight="3dp"
	            android:singleLine="true"/>
	        <EditText
	            android:id="@+id/esn.register.Password"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/rounded_corner_white"
	            android:height="40dp"
	            android:password="true"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
	            android:paddingBottom="7dp"
	            android:paddingRight="5dp"
	            android:singleLine="true"
	            android:layout_marginLeft="3dp"
	   	    	android:layout_marginRight="3dp"
	            android:hint="@string/tvPassword"/>    
	        
           	<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFOMATION"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"
	   	    	android:layout_marginRight="3dp"
                android:textColor="#FFFFFF"/> 
                
            <EditText
           		android:id="@+id/esn.register.txtFullName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_white"
                android:height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"                
                android:paddingTop="7dp"
	            android:paddingBottom="7dp"
	            android:paddingRight="5dp"
	            android:singleLine="true"
	            android:layout_marginLeft="3dp"
	   	    	android:layout_marginRight="3dp"
                android:hint="@string/app.register.Name" />
                        
             <Spinner
			        android:id="@+id/esn.register.ddlGender"
			        android:layout_width="110dp"
			        android:layout_height="40dp"
			        android:entries="@array/Gender_arrays"
			        android:prompt="@string/app.register.ddlName"
			        android:height="40dp"
			        android:background="@drawable/rounded_corner_white"
			        android:layout_marginTop="5dp"
			        android:layout_marginBottom="5dp"
			        android:paddingLeft="5dp"
			        android:spinnerMode="dialog"
			        android:layout_marginLeft="3dp"	   	    	
			        android:popupBackground="#33b5e5"/>
            
            <EditText
                android:id="@+id/esn.register.txtBirthday"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="DatePickerDialogShow"
                android:editable="false"
                android:height="40dp"
                android:background="@drawable/rounded_corner_white"            
                android:paddingLeft="5dp"
                android:layout_marginLeft="3dp"
	   	    	android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:hint="@string/esn.register.date" />
            
            <EditText
                android:id="@+id/esn.register.txtPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:paddingLeft="5dp"
                android:background="@drawable/rounded_corner_white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:paddingTop="7dp"
	            android:paddingBottom="7dp"
	            android:layout_marginLeft="3dp"
	   	    	android:layout_marginRight="3dp"
	            android:paddingRight="5dp"
                android:hint="@string/tvPhone"
                android:inputType="number"/>   
        
           <Button android:id="@+id/btnRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"                
                android:onClick="RegisterClicked"
                android:text="@string/app_register"
                android:textColor="#FFFFFF"
                android:textStyle="normal"/>
           
           <Button android:id="@+id/btnCancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"                
                android:onClick="CancelClicked"
                android:text="@string/btBack"
                android:textColor="#FFFFFF"
                android:textStyle="normal"/>
        
           <LinearLayout 
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:gravity="center"
        	    android:orientation="horizontal"
        	    android:layout_marginBottom="10dp">
        	    <TextView
                android:id="@+id/lkService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="@string/hlService"
                android:textColor="#FFFFFF"
                android:textSize="12dp"/>

           <TextView
                android:id="@+id/lkPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hlPolicy"
                android:textColor="#FFFFFF"                
                android:textSize="12dp" />
        	</LinearLayout>              
    </LinearLayout>    

</ScrollView>