<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    > 
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        >        
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            >            
            <TextView 
	    	android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_color"
	        android:text="@string/esn.setting.app.event.enable"
	        android:textSize="16dp"
	        />
		    <Switch 
		        android:id="@+id/esn.setting.app.facebook.enable"
		    	android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="right">						               
		    </Switch>
            
        </TableRow>
        <View
			android:layout_width="fill_parent"
			android:layout_height="2dip"
			android:layout_marginBottom="10dp"
			android:background="#ACCC" />
        
        <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            >            
            <TextView 
		    	android:layout_width="90dp"
		        android:layout_height="wrap_content"
		        android:textColor="@color/text_color"
		        android:textSize="16dp"
		        android:text="@string/esn.setting.app.facebook.email"/>
		    <EditText 
		        android:id="@+id/esn.setting.app.facebook.email"
	            android:layout_width="213dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rounded_corner_blue"
	            android:textColor="#FFF"
	            android:paddingTop="6dp"
	            android:paddingBottom="6dp"
	            android:paddingLeft="2dp"
	           android:paddingRight="2dp"
	           android:singleLine="true"
	            /> 
        </TableRow>
         <TableRow 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            >            
            <TextView                 
		    	android:layout_width="90dp"
		        android:layout_height="wrap_content"
		        android:textColor="@color/text_color"
		        android:textSize="16dp"
		        android:text="@string/esn.setting.app.facebook.pass"/>
		    <EditText 
		        android:id="@+id/esn.setting.app.facebook.password"
	            android:layout_width="213dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rounded_corner_blue"
	            android:textColor="#FFF"
	            android:paddingTop="6dp"
	            android:paddingBottom="6dp"
	            android:paddingLeft="2dp"
	           	android:paddingRight="2dp"
	           	android:inputType="textPassword"
	           	android:singleLine="true"
	            /> 
        </TableRow>
    </TableLayout>  
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
	    <Button 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/rounded_corners"
	        android:text="@string/esn.setting.app.event.ok"
	        android:textColor="#FFF"
	        android:onClick="SaveFacebookAccount"
	        />	    
	</LinearLayout>
</LinearLayout>