<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingLeft="8dp"
	    android:paddingTop="8dp"
	    android:paddingRight="8dp"
	    android:background="#E8E3DC"
	    android:layout_marginTop="50dp"
	    android:orientation="vertical"
	    android:focusable="true"
	    android:focusableInTouchMode="true">
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:background="@android:color/white"
	    	android:padding="8dp"
	    	android:orientation="vertical"
	        >  
	        <LinearLayout 
		        android:orientation="horizontal"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        >
		        <ImageView
		            android:id="@+id/esn.changeprogile.avatar"
		            android:layout_width="90dp"
		            android:layout_height="90dp"
		            android:layout_gravity="top"
		            android:contentDescription="@string/esn_register_avatar"
		            android:onClick="AvatarClicked"
		            android:src="@drawable/avatar"
		            android:adjustViewBounds="true"
		            />		        
		        <LinearLayout 
		            android:orientation="vertical"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            >
					<TextView 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:text="@string/esn_account_name"
			            android:layout_marginBottom="8dp"
			            />
		       		<EditText
		       		    android:id="@+id/esn.changeprofile.fullname"
		       		    android:layout_width="fill_parent"
		       		    android:layout_height="wrap_content"
		       		    android:layout_marginBottom="10dp"
		       		    android:background="@drawable/rounded_corner_blue"
		       		    android:hint="@string/esn.register.Name"
		       		    android:paddingBottom="8dp"
		       		    android:paddingLeft="5dp"
		       		    android:paddingRight="5dp"
		       		    android:paddingTop="8dp"
		       		    android:textSize="16dp"		       		     
		       		    android:textColor="@color/text_color"
		       		    android:textColorHint="@color/text_color"
		       		    android:singleLine="true"
		       		    android:maxLength="255"
		       		    />	       				       		
		        </LinearLayout>
		    </LinearLayout>  
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginTop="10dp">
		        
	            <TextView 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:text="@string/esn.register.tvPhone"
			            android:layout_marginBottom="5dp"/>
				<EditText
		                android:id="@+id/esn.changeprofile.phone"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="@drawable/rounded_corner_blue"
		                android:inputType="text"
		                android:paddingBottom="8dp"
		                android:paddingLeft="5dp"
		                android:paddingRight="5dp"
		                android:paddingTop="8dp"
		                android:textSize="16dp"		                
		                android:textColor="@color/text_color"
		       		    android:textColorHint="@color/text_color"
		       		    android:maxLength="255"/>
				
	            
	            <LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    >
				    
				    <LinearLayout 
					    android:layout_width="120dp"
					    android:layout_height="wrap_content"
					    android:orientation="vertical"
					    android:layout_marginRight="6dp"
					    >	
					    <TextView 
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="@string/esn.register.tvGender"
				            android:layout_marginTop="10dp"
				            android:layout_marginBottom="5dp"/>	 
				    	<Spinner
			       		    android:id="@+id/esn.changeprofile.gender"
			       		    android:layout_width="fill_parent"
			       		    android:layout_height="wrap_content"
			       		    android:background="@drawable/rounded_corner_blue"
			       		    android:entries="@array/Gender_arrays"
			       		    android:paddingBottom="8dp"
			       		    android:paddingLeft="5dp"
			       		    android:paddingRight="5dp"
			       		    android:paddingTop="8dp"
			       		    android:prompt="@string/esn.register.ddlName"
			       		    android:textSize="16dp" />
					</LinearLayout>
					
					<LinearLayout 
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="vertical"
					    >	
					    <TextView 
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="@string/esn.register.tvBirthday"
				            android:layout_marginTop="10dp"
				            android:layout_marginBottom="5dp"/>
					
						<EditText
			                android:id="@+id/esn.changeprofile.birthday"
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
							android:background="@drawable/rounded_corner_blue"
							android:paddingBottom="8dp"
			                android:paddingLeft="5dp"
			                android:paddingRight="5dp"
			                android:paddingTop="8dp"
			                android:textSize="16dp"		                
			                android:editable="false"
			                android:hint="@string/esn.register.date"
			                android:onClick="DatePickerDialogShow"
			                android:textColor="@color/text_color"
			                android:textColorHint="@color/text_color" />
					</LinearLayout>
				</LinearLayout>	
				
				<View 
				    android:layout_width="fill_parent"
				    android:layout_height="1dp"
				    android:background="#E8E3DC"
				    android:layout_marginTop="20dp"
				    android:layout_marginBottom="10dp" />
				    
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    >
				    
				    <LinearLayout 
					    android:layout_width="120dp"
					    android:layout_height="wrap_content"
					    android:orientation="vertical"
					    android:layout_marginRight="6dp"
					    >	
					    <TextView 
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="@string/tv_Edit_Profile_Address"
				            android:layout_marginTop="10dp"
				            android:layout_marginBottom="5dp"/>
						<EditText
				    	    android:id="@+id/esn.changeprofile.address"
				    	    android:layout_width="fill_parent"
				    	    android:layout_height="wrap_content"
				    	    android:background="@drawable/rounded_corner_blue"
				    	    android:inputType="text"
				    	    android:paddingBottom="8dp"
				    	    android:paddingLeft="5dp"
				    	    android:paddingRight="5dp"
				    	    android:paddingTop="8dp"
				    	    android:textSize="16dp"			    	     
				    	    android:textColor="@color/text_color"
			       		    android:textColorHint="@color/text_color"
			       		    android:maxLength="255"/>
					</LinearLayout>
					
					<LinearLayout 
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="vertical"
					    >	
					    <TextView 
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="@string/tv_Edit_Profile_Street"
				            android:layout_marginTop="10dp"
				            android:layout_marginBottom="5dp"/>
						<EditText
				    	    android:id="@+id/esn.changeprofile.street"
				    	    android:layout_width="fill_parent"
				    	    android:layout_height="wrap_content"
				    	    android:background="@drawable/rounded_corner_blue"
				    	    android:inputType="text"
				    	    android:paddingBottom="8dp"
				    	    android:paddingLeft="5dp"
				    	    android:paddingRight="5dp"
				    	    android:paddingTop="8dp"
				    	    android:textSize="16dp"			    	    
				    	    android:textColor="@color/text_color"
			       		    android:textColorHint="@color/text_color"
			       		    android:maxLength="255"/>
					</LinearLayout>
				</LinearLayout>				
				
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    >
				    
				    <LinearLayout 
					    android:layout_width="120dp"
					    android:layout_height="wrap_content"
					    android:orientation="vertical"
					    android:layout_marginRight="6dp"
					    >	
					    <TextView 
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="@string/tv_Edit_Profile_District"
				            android:layout_marginTop="10dp"
				            android:layout_marginBottom="5dp"/>
						<EditText
				    	    android:id="@+id/esn.changeprofile.district"
				    	    android:layout_width="fill_parent"
				    	    android:layout_height="wrap_content"
				    	    android:background="@drawable/rounded_corner_blue"
				    	    android:inputType="text"
				    	    android:paddingBottom="8dp"
				    	    android:paddingLeft="5dp"
				    	    android:paddingRight="5dp"
				    	    android:paddingTop="8dp"
				    	    android:textSize="16dp"			    	    
				    	    android:textColor="@color/text_color"
			       		    android:textColorHint="@color/text_color"
			       		    android:maxLength="255"/>
					</LinearLayout>
					
					<LinearLayout 
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="vertical"
					    >	
					    <TextView 
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:text="@string/tv_Edit_Profile_City"
				            android:layout_marginTop="10dp"
				            android:layout_marginBottom="5dp"/>
						<EditText
				    	    android:id="@+id/esn.changeprofile.city"
				    	    android:layout_width="fill_parent"
				    	    android:layout_height="wrap_content"
				    	    android:background="@drawable/rounded_corner_blue"
				    	    android:inputType="text"
				    	    android:paddingBottom="8dp"
				    	    android:paddingLeft="5dp"
				    	    android:paddingRight="5dp"
				    	    android:paddingTop="8dp"
				    	    android:textSize="16dp"			    	    
				    	    android:textColor="@color/text_color"
			       		    android:textColorHint="@color/text_color"
			       		    android:maxLength="255"/>
					</LinearLayout>
				</LinearLayout>	
				
				<TextView 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:text="@string/tv_Edit_Profile_Country"
			            android:layout_marginTop="10dp"
			            android:layout_marginBottom="5dp"/>
				<EditText
			    	    android:id="@+id/esn.changeprofile.country"
			    	    android:layout_width="fill_parent"
			    	    android:layout_height="wrap_content"
			    	    android:background="@drawable/rounded_corner_blue"
			    	    android:inputType="text"
			    	    android:paddingBottom="8dp"
			    	    android:paddingLeft="5dp"
			    	    android:paddingRight="5dp"
			    	    android:paddingTop="8dp"
			    	    android:textSize="16dp"			    	     
			    	    android:textColor="@color/text_color"
		       		    android:textColorHint="@color/text_color"
		       		    android:maxLength="255"/>
				<View 
				    android:layout_width="fill_parent"
				    android:layout_height="1dp"
				    android:background="#E8E3DC"
				    android:layout_marginTop="20dp"
				    android:layout_marginBottom="10dp"
				    />
				<TextView 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:text="@string/tv_Edit_Profile_Favorite"
			            android:layout_marginTop="10dp"
			            android:layout_marginBottom="5dp"/>
				<EditText
			    	    android:id="@+id/esn.changeprofile.favorite"
			    	    android:layout_width="fill_parent"
			    	    android:layout_height="wrap_content"
			    	    android:background="@drawable/rounded_corner_blue"
			    	    android:inputType="text"
			    	    android:paddingBottom="8dp"
			    	    android:paddingLeft="5dp"
			    	    android:paddingRight="5dp"
			    	    android:paddingTop="8dp"
			    	    android:textSize="16dp"			    	    
			    	    android:textColor="@color/text_color"
		       		    android:textColorHint="@color/text_color"/>
				
				<View 
				    android:layout_width="fill_parent"
				    android:layout_height="1dp"
				    android:background="#E8E3DC"
				    android:layout_marginTop="10dp"
				    android:layout_marginBottom="10dp"
				  	/>
				
				<Button 
		            android:id="@+id/btLogin"
		            android:onClick="UpdateProfileClicked"	            
		            android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/rounded_corners"
			        android:text="@string/esn.setting.app.event.ok"
			        android:textColor="#FFF"
		            />
	        </LinearLayout>	     
	    </LinearLayout>
	</LinearLayout>
</ScrollView>