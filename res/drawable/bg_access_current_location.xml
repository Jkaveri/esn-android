<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"><shape android:visible="true">
            <gradient android:angle="270" android:endColor="#CCE2E2E2" android:startColor="#CCBABABA" />

            <corners android:radius="3dp" />

            <stroke android:width="1dp" android:color="#cc333333" />
        </shape></item>
    <item android:state_pressed="true"><shape android:visible="true">
            <solid android:color="#CC33B5E5" />

            <corners android:radius="0dp" />

            <stroke android:width="1dp" android:color="#ff00ffff" />
        </shape></item>

</selector>