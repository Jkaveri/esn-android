<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img.Friends.Diaglog.Avatar"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_no_avata" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt.Friends.Diaglog.FullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_esn_userpage_fullname"
                android:textColor="#33b5e5"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt.Friends.Diaglog.Discript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_esn_userpage_phone"
                android:textColor="#33b5e5"
                android:textSize="14dp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn.Friends.Diaglog.Visit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dip"
            android:layout_height="36dip"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_corner_blue"
            android:text="@string/btn_Friends_Lists_Diaglog_Visit"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btn.Friends.Diaglog.Unfriend"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dip"
            android:layout_height="36dip"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_corner_blue"
            android:text="@string/btn_Friends_Lists_Diaglog_Unfriend"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btn.Friends.Diaglog.Close"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dip"
            android:layout_height="36dip"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_corner_blue"
            android:text="@string/btn_Friends_Lists_Diaglog_Close"
            android:textColor="#FFF" />
    </LinearLayout>

</LinearLayout>