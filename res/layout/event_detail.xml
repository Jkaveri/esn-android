<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#B8AFA5"
    android:padding="0dp"
    >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
    	android:focusableInTouchMode="true"
    	android:layout_margin="6dp"
        >
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="@drawable/ic_event_bg"
		    android:padding="6dp"
		    >     
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_gravity="top"
		        android:gravity="top|center_horizontal"
		        > 
		        <ImageView 
		            android:id="@+id/esn_eventDetail_iconEventType"
					android:layout_width="40dp"
					android:layout_height="50dp"
					android:scaleType="fitXY"
					android:background="#FFF"          
		            />     
		        <LinearLayout 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            >
		            <TextView
				   		android:id="@+id/esn_eventDetail_title"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textSize="15dp"
				        android:textColor="#9A9B91"
				        android:layout_margin="4dp"
				        android:layout_marginRight="10dp"/> 
				    <TextView
				    	android:id="@+id/esn_eventDetail_description"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textSize="13dp"
				        android:textColor="#9A9B91"
				        android:layout_marginLeft="4dp"/>
		        </LinearLayout>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center_horizontal"
			    android:orientation="vertical"
			    >
		        <TextView
	                    android:id="@+id/esn_eventDetail_address"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:singleLine="false"
	                    android:textAppearance="?android:attr/textAppearanceMedium"
	                    android:textColor="#9A9B91"
	                    android:textSize="12dp" />	
			    <ImageView
			        android:id="@+id/esn_eventDetail_image"
			        android:layout_width="250dp"
			        android:layout_height="180dp"
			        android:maxWidth="250dp"
			        android:minWidth="150dp"
			        android:layout_marginTop="4dp"
			        android:layout_marginBottom="4dp"
			        android:contentDescription="@string/app_name"
			        android:background="@drawable/ic_default_event_picture"
			        android:scaleType="fitXY"/>
			</LinearLayout>
			<LinearLayout 
				android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="2dp"
			    android:gravity="right">    	
			   	<TextView
			    	android:id="@+id/esn_eventDetail_dateCreated"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="13dp"
			        android:layout_weight="1"
			        android:textColor="#9A9B91"
			        android:text="01-01-2012"
			        android:padding="4dp"/>
			    <ImageView 
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:scaleType="fitXY"
			   	    android:src="@drawable/ic_true"
			   	    />
			   	<TextView
			    	android:id="@+id/esn_eventDetail_like"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="10dp"
			        android:layout_marginLeft="4dp"
			        android:textSize="13dp"
			        android:text="0"
			        android:padding="4dp"
			        android:textColor="#9A9B91"/>
			   	<ImageView 
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:scaleType="fitXY"
			   	    android:src="@drawable/ic_false"
			   	    />
			   	<TextView
			    	android:id="@+id/esn_eventDetail_dislike"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="10dp"
			        android:layout_marginLeft="4dp"
			        android:textSize="13dp"
			        android:text="0"
			        android:padding="4dp"
			        android:textColor="#9A9B91"/>
			   	<ImageView
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:scaleType="fitXY"
			   	    android:src="@drawable/comment"
			   	    />
			   	<TextView
			    	android:id="@+id/esn_setting_profile_comment"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="13dp"
			        android:layout_marginRight="10dp"
			        android:layout_marginLeft="4dp"
			        android:text="0"
			        android:textColor="#9A9B91"
			        android:padding="4dp"/> 
			 </LinearLayout>      	    
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
		    <ImageButton
		        android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:adjustViewBounds="true"
	            android:background="@drawable/ic_event_share"
	            android:contentDescription="@string/esn_eventDetail_iconEventType"
	            android:onClick="shareClicked"
	            android:scaleType="fitCenter" />
		</LinearLayout>
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/esn_eventDetail_txtComment"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:hint="@string/esn_eventDetail_comment"
                android:inputType="text"
                android:maxLength="160"
                android:paddingLeft="5dp"
                android:textColor="#9A9B91"
                android:textColorHint="#9A9B91"
                android:textSize="14dp" >
            </EditText>
            <Button
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/rounded_corners"
                android:onClick="CommentClicked"
                android:text="@string/esn_eventDetail_send"
                android:textColor="#9A9B91"                
                android:textSize="16dp" />
        </LinearLayout>
        <ListView
        	android:id="@+id/esn.eventDetails.listComments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/ic_divider2">
        </ListView>       
        <Button
            android:id="@+id/esn.eventDetails.btShowCommentAll"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="#B8AFA5"
            android:onClick="ShowAllCommentClicked"
            android:text="@string/esn_eventDetail_commentall"
            android:textColor="#9A9B91"
            android:textSize="10dp"/>
	</LinearLayout>
</ScrollView>