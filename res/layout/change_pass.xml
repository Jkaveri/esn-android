<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="50dp">
	    
	    <TableLayout
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:stretchColumns="1"
    		android:layout_marginTop="15dp">

	        <TableRow>       
        		<TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/app.global.Email"
		            android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"
		            />
		        <EditText
		            android:id="@+id/esn.changepass.email"
		           	android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"		            
		            android:editable="false">
		            <requestFocus />
		        </EditText>
    		</TableRow>
    		<TableRow>       
        		<TextView         		    
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/tv_current_pass"
		            android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"
	            	/>

		        <EditText
		            android:id="@+id/esn.changepass.currentpassword"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:singleLine="true"
		            android:background="#c5eaf8"
		            android:password="true">
		        </EditText>
    		</TableRow>
    		<TableRow >
        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_new_pass"
	            	android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"/>
        		
		    	<EditText 
		    	    android:id="@+id/esn.changepass.newpassword"
			   	    android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:singleLine="true"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"
		            android:password="true"
			   	    />
    		</TableRow>
    		
	        <TableRow >
	        
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/tv_confirm_pass"
		            android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"/>
	            <EditText 
	                android:id="@+id/esn.changepass.repeatnewpassword"
			   	    android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:singleLine="true"
	            	android:password="true"
		            android:background="#c5eaf8"/>
	        </TableRow>
	        
		</TableLayout>	
		
		<LinearLayout 
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        >
	        <Button 
	            android:id="@+id/btLogin"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/btDone"
	            android:onClick="ChangePasswordClicked"
	            />	      
	    </LinearLayout>
	    
	</LinearLayout>
</ScrollView>