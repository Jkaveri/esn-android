<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="50dp"
	    >
	    
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp">
	        
	        <ImageView 
	            android:id="@+id/esn.changeprogile.avatar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/avatar"
	            android:onClick="AvatarClicked"/>
	        
	        <LinearLayout 
	            android:orientation="vertical"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            >
	       
	        </LinearLayout>
	    </LinearLayout>
	    
	    <TableLayout
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:stretchColumns="1"
    		android:layout_marginTop="15dp">

	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/lbEdit_Profile"
	            android:textStyle="normal"
	            />
	        <View
        		android:layout_height="2dip"
        		android:background="#000000"
        		android:layout_marginBottom="10dp" />
	        
    		<TableRow>       
        		<TextView 
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/tv_edit_Name"
		            android:layout_marginBottom="10dp"
		            android:textColor="#000000"
		            android:background="#CC0000"
		            android:layout_marginRight="10dp"
		            android:textStyle="normal"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp"
		            />

		        <EditText
		            android:id="@+id/esn.changeprofile.fullname"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:ems="10"
		            android:height="40dp"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
		            android:textColor="#000000"		            
		            android:background="#999999"
		            android:textSize="15dp" >

		            <requestFocus />
		        </EditText>
    		</TableRow>
    		
    		<TableRow>	        	
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/tvGender"
		            android:textSize="12dp"
		            android:layout_marginBottom="10dp"
		            android:textColor="#000000"		            
		            />
	            
	            <Spinner
	                android:id="@+id/esn.changeprofile.gender"
			        android:layout_width="110dp"
			        android:layout_height="40dp"
			        android:entries="@array/Gender_arrays"
			        android:prompt="@string/app.register.ddlName"
			        android:height="40dp"
			        android:layout_marginTop="5dp"
			        android:layout_marginBottom="5dp"
			        android:paddingLeft="5dp"
			        android:spinnerMode="dialog"
			        android:popupBackground="#33b5e5"
			        android:background="#000000"/>
	            		   	
		   	
	        </TableRow>
	        
    		<TableRow >
        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_edit_DayOfBirth"
	            	android:textSize="12dp"
	            	android:layout_marginBottom="10dp"
	            	android:textColor="#000000"/>
		    	<EditText
		    	    android:id="@+id/esn.changeprofile.birthday"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:onClick="DatePickerDialogShow"
	                android:editable="false"
	                android:height="40dp"
	                android:background="#FFFFFF"
	                android:layout_marginBottom="10dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:hint="@string/esn.register.date" />
    		</TableRow>
    		
	        <TableRow >
	        
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/tv_edit_Phone"
		            android:textSize="12dp"
		            android:layout_marginBottom="10dp"
		            android:textColor="#000000"
		            
		            />
	            <EditText 
	                android:id="@+id/esn.changeprofile.phone"
			   	    android:width="214dp"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:height="40dp"
			   	    android:layout_marginBottom="5dp"
			   	    android:textSize="15dp"
			   	    android:textColor="#000000"
			   	    android:paddingLeft="5dp"
			   	    android:paddingRight="5dp" />		   	
		   	
	        </TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/tv_Edit_Profile_ChangeAddress"
	            android:textStyle="normal"
	            />
	        <View
        		android:layout_height="2dip"
        		android:background="#000000"
        		android:layout_marginBottom="10dp" />
	        <TableRow >
        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_Address"
	            	android:textSize="12dp"
	            	android:layout_marginBottom="10dp"
	            	android:textColor="#000000"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.address"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:height="40dp"
	                android:background="#FFFFFF"
	                android:layout_marginBottom="10dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp" />
    		</TableRow>
    		<TableRow>
        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_Street"
	            	android:textSize="12dp"
	            	android:layout_marginBottom="10dp"
	            	android:textColor="#000000"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.street"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:height="40dp"
	                android:background="#FFFFFF"
	                android:layout_marginBottom="10dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp" />
    		</TableRow>
    		<TableRow >        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_District"
	            	android:textSize="12dp"
	            	android:layout_marginBottom="10dp"
	            	android:textColor="#000000"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.district"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:height="40dp"
	                android:background="#FFFFFF"
	                android:layout_marginBottom="10dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp" />
    		</TableRow>
    		<TableRow >        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_City"
	            	android:textSize="12dp"
	            	android:layout_marginBottom="10dp"
	            	android:textColor="#000000"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.city"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:height="40dp"
	                android:background="#FFFFFF"
	                android:layout_marginBottom="10dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp" />
    		</TableRow>
    		<TableRow >        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_Country"
	            	android:textSize="12dp"
	            	android:layout_marginBottom="10dp"
	            	android:textColor="#000000"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.country"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:height="40dp"
	                android:background="#FFFFFF"
	                android:layout_marginBottom="10dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp" />
    		</TableRow>
    		
    		<TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/tv_Edit_Profile_Other"
	            android:textStyle="normal"
	            />
	        <View
        		android:layout_height="2dip"
        		android:background="#000000"
        		android:layout_marginBottom="10dp" />
	        
	        <TableRow >        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_Favorite"
	            	android:textSize="12dp"
	            	android:layout_marginBottom="10dp"
	            	android:textColor="#000000"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.favorite"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:height="80dp"	                
	                android:background="#FFFFFF"
	                android:layout_marginBottom="10dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"/>
    		</TableRow>
		</TableLayout>	
		
		<LinearLayout 
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:layout_marginBottom="10dp"
	        >
	        <Button 
	            android:id="@+id/btLogin"
	            android:layout_width="155dp"
	            android:layout_height="35dp"
	            android:textSize="12dp"
	            android:text="@string/btDone"
	            />
	        <Button 
	            android:id="@+id/btCancel"
	            android:layout_width="155dp"
	            android:layout_height="35dp"
	            android:textSize="12dp"
	            android:text="@string/btCancel"
	            android:onClick="CancelClicked"
	            />
	    </LinearLayout>	    
	</LinearLayout>
</ScrollView>