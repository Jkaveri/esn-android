<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="50dp"
	    >	    
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp">
	        
	        <ImageView 
	            android:id="@+id/esn.changeprogile.avatar"
	            android:layout_width="100dp"
	            android:layout_height="100dp"
	            android:src="@drawable/avatar"
	            android:onClick="AvatarClicked"	            
	            />
	        
	        <LinearLayout 
	            android:orientation="vertical"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            >
	       		<EditText
		            android:id="@+id/esn.changeprofile.fullname"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8">
		            <requestFocus />
		        </EditText>
		        
	       		<Spinner
	                android:id="@+id/esn.changeprofile.gender"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:entries="@array/Gender_arrays"
			        android:prompt="@string/app.register.ddlName"
			        android:layout_marginBottom="10dp"
			        android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="6dp"
	            	android:paddingBottom="7dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"/>
	       		
	       		<EditText
		    	    android:id="@+id/esn.changeprofile.birthday"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:onClick="DatePickerDialogShow"
	                android:editable="false"
	                android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"/>
	        </LinearLayout>
	    </LinearLayout>
	    
	    <TableLayout
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:stretchColumns="1"
    		android:layout_marginTop="15dp">
	        
	        <TableRow >
	        
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/tv_edit_Phone"
		            android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"
		            />
	            <EditText 
	                android:id="@+id/esn.changeprofile.phone"
			   	    android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"/>		   	
		   	
	        </TableRow>
	        
	        <TableRow >
        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_Address"
	            	android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.address"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"/>
    		</TableRow>
    		<TableRow>
        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_Street"
	            	android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.street"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"/>
    		</TableRow>
    		<TableRow >        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_District"
	            	android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.district"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"/>
    		</TableRow>
    		<TableRow >        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_City"
	            	android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.city"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"/>
    		</TableRow>
    		<TableRow >        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_Country"
	            	android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.country"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"/>
    		</TableRow>  
	        <TableRow >        
        		<TextView 
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="@string/tv_Edit_Profile_Favorite"
	            	android:layout_marginBottom="10dp"
		            android:background="#8ad5f0"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
	            	android:textStyle="bold"
	            />
		    	<EditText
	                android:id="@+id/esn.changeprofile.favorite"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:textStyle="bold"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"		            
	            	android:paddingTop="8dp"
	            	android:paddingBottom="8dp"
	            	android:textSize="14dp"
		            android:background="#c5eaf8"/>
    		</TableRow>
		</TableLayout>	
		
		<LinearLayout 
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:layout_marginBottom="10dp"
	        >
	        <Button 
	            android:id="@+id/btLogin"
	            android:layout_width="155dp"
	            android:layout_height="35dp"
	            android:textSize="12dp"
	            android:onClick="UpdateProfileClicked"
	            android:text="@string/btDone"
	            />
	        <Button 
	            android:id="@+id/btCancel"
	            android:layout_width="155dp"
	            android:layout_height="35dp"
	            android:textSize="12dp"
	            android:text="@string/btCancel"
	            android:onClick="CancelClicked"
	            />
	    </LinearLayout>	    
	</LinearLayout>
</ScrollView>