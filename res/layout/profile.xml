<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/esn_setting_profile_avataruser"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_avatar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/esn.setting.profile.name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#33b5e5"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/esn.setting.profile.address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#33b5e5" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_blue"
            android:onClick="SettingClicked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/esn.setting.profile.setting"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <Button
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_blue"
            android:onClick="MessageClicked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/esn.setting.profile.notification"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_corner_blue"
            android:contentDescription="@string/app.global.camera"
            android:src="@drawable/ic_setting_profile_no"
            android:textColor="@android:color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_blue"
            android:onClick="FriendsClicked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_setting_profile_friend"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_blue"
            android:onClick="PersonalClicked"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_setting_profile_information"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_corner_blue"
            android:contentDescription="@string/app.global.camera"
            android:src="@drawable/ic_setting_profile_location"
            android:textColor="@android:color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/esn.setting.profile.listeventuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

</LinearLayout>